mixin card(data)
    .card.bg-gray 
        .card__content 
            h3.card__seccion=data.seccion
            h2.card__title=data.title
            p.card__description=data.description
            .text__center
                button.card__btn=data.btn
        figure.card__figure 
            img.card__img(src=data.image, alt="image-card")